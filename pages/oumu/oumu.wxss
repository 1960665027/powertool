.pickerstyle{
  margin-top: 30rpx;
  justify-content: center;
  display: flex;
}
.sectionzhengti{
  margin-top: 30rpx;
}
.section{
  margin-top: 50rpx;
}
.row{
  display: flex;
  align-items: center;
  margin-bottom: 0.8rem;
}
.row text{
  flex-grow: 1;
  text-align: left;
}
.row input{
  font-size: 0.7rem;
  color: black;
  flex-grow: 3;
  border: 1px solid #0099CC;
  display: inline-block;
  border-radius: 0.3rem;
  box-shadow: 0 0 0.15rem #0099CC;
  padding: 0.3rem;
}
.row button{
  padding: 0 2rem;
}
.touxiang .imgyac{
  display: flex;
  margin: 50rpx auto;
  width: 100px; 
  height: 100px; 
}
.pickerimg{
  width: 30rpx;
  height: 30rpx;
  margin-top: 10rpx;
}
.ad-item{
  position: fixed;
  bottom: 0px;
}